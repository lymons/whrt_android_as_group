<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_revise"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="1">

    <include layout="@layout/detail_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:text="原密码:"
            android:textColor="@color/activity_bg_color_gray"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/update_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:hint="请输入原密码"
            android:password="true"
            android:textColor="@color/activity_bg_color_gray"
            android:textColorHint="@color/activity_bg_color_gray_transparent"
            android:textSize="15dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="7dp"
        android:background="#cfcccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:text="新密码:"
            android:textColor="@color/activity_bg_color_gray"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/update1_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:hint="请输入6～16位字母、数字"
            android:maxLength="16"
            android:minLines="6"
            android:password="true"
            android:textColor="@color/activity_bg_color_gray"
            android:textColorHint="@color/activity_bg_color_gray_transparent"
            android:textSize="15dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="7dp"
        android:background="#cfcccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:text="确认密码:"
            android:textColor="@color/activity_bg_color_gray"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/update2_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:hint="请确认新密码"
            android:password="true"
            android:maxLength="16"
            android:minLines="6"
            android:textColor="@color/activity_bg_color_gray"
            android:textColorHint="@color/activity_bg_color_gray_transparent"
            android:textSize="15dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="7dp"
        android:background="#cfcccc" />

    <Button
        android:id="@+id/assign"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_login_submit_button"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>
