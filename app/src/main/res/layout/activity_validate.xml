<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color_while"
    android:weightSum="1">
    <include layout="@layout/detail_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/reg_top_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/logindb" />
    </LinearLayout>

    <EditText
        android:id="@+id/phone"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:hint="请输入手机号"
        android:layout_height="39dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        android:background="#cfcccc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/shuru"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:background="@null"
            android:layout_marginLeft="6dip"
            android:hint="请输入验证码"/>
        <Button
            android:id="@+id/sc"
            android:layout_width="100dp"
            android:layout_height="39dp"
            android:text="发送短信"
            android:layout_marginRight="20dp"
            android:padding="3dp"
            android:textSize="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_login_submit_button"
            android:textColor="@color/white" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:background="#cfcccc"/>

    <Button
        android:id="@+id/yanzhen"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/shape_login_submit_button"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="20sp" />
</LinearLayout>
