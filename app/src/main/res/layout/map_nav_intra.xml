<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/activity_bg_color_while"
    android:gravity="top"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lin_intra_img"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical" >

        <com.mieasy.whrt_app_android_4.view.ZoomImageView
            android:id="@+id/iv_intra_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitStart" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    <TextView
        android:id="@+id/tv_station_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/block_bg_color_black"
        android:layout_margin="10dip"
        android:gravity="center_vertical"
        android:lineSpacingExtra="2dip"
        android:textSize="15sp"
        android:scrollHorizontally="false"/>
    </ScrollView>

</LinearLayout>