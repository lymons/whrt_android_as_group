<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >
		<!-- item标识 -->
        <ImageView
            android:id="@+id/pathinfo_left_img"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/zhongjianzhan" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:orientation="vertical" >
			<!-- 站名标识 -->
            <TextView
                android:id="@+id/pathinfo_left_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textSize="18sp" />
        </LinearLayout>
		<!-- 多少号线以及乘车方向 -->
        <LinearLayout
            android:id="@+id/pathinfo_right_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_weight="6"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/pathinfo_right_lines"
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/line_no01"/>

            <ImageView
                android:id="@+id/pathinfo_same_lines"
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:src="@drawable/same_platform_line"/>

            <TextView
                android:id="@+id/pathinfo_right_dir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>