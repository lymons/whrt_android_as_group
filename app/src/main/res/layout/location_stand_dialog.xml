<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8000C5CD"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_line_num_one"
        android:layout_width="15dip"
        android:layout_height="15dip"
        android:layout_gravity="center"
        android:layout_marginLeft="10dip"
        android:background="@drawable/shape_dialog"
        android:gravity="center"
        android:text="1"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_line_num_two"
        android:layout_width="15dip"
        android:layout_height="15dip"
        android:layout_gravity="center"
        android:layout_marginLeft="5dip"
        android:background="@drawable/shape_dialog"
        android:gravity="center"
        android:text="2"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_line_num_four"
        android:layout_width="15dip"
        android:layout_height="15dip"
        android:layout_gravity="center"
        android:layout_marginLeft="5dip"
        android:background="@drawable/shape_dialog"
        android:gravity="center"
        android:text="4"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_line_stand_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="5dip"
        android:gravity="center"
        android:paddingLeft="5dip"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_lin_start"
            android:layout_width="wrap_content"
            android:layout_height="24dip"
            android:background="@drawable/shape_dialog_imgbtn_start"
            android:gravity="center"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="起点" />

        <TextView
            android:id="@+id/tv_lin_end"
            android:layout_width="wrap_content"
            android:layout_height="24dip"
        android:layout_marginLeft="5dip"
            android:background="@drawable/shape_dialog_imgbtn_start"
            android:gravity="center"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="终点" />

        <TextView
            android:id="@+id/tv_lin_info"
            android:layout_width="wrap_content"
            android:layout_height="24dip"
        android:layout_marginLeft="5dip"
            android:background="@drawable/shape_dialog_imgbtn_start"
            android:gravity="center"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="详情" />
    </LinearLayout>

</LinearLayout>