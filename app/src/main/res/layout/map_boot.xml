<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin_main_top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/activity_bg_color_blue"
        android:gravity="center"
        android:minHeight="40dip"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/activity_bg_color_blue"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/lin_top_left_home"
                android:layout_width="100dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/iv_top_left_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:background="@color/block_bg_color_alpha"
                    android:scaleType="fitXY"
                    android:src="@drawable/back" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_top_left_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="@string/block_boot"
                    android:textColor="@color/activity_bg_color_while"
                    android:textSize="20sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/imgbt_right_showSite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@color/block_bg_color_alpha"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/item_search_default" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/activity_bg_color_while"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.mieasy.whrt_app_android_4.view.DragImageView
                android:id="@+id/div_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_latelySite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_mi"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"/>

        <LinearLayout
            android:id="@+id/ll_selectorsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ececec"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_push_up"
                android:layout_width="50dp"
                android:layout_height="23dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/push_buttton_uptwo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#176b42"
                    android:text="起"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_start_tracation"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:background="@drawable/custom_bg" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/metro_run" />
                </RelativeLayout>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="终"
                    android:textStyle="bold"
                    android:textColor="#e03629"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_end_tracation"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:paddingLeft="6dp"
                    android:background="@drawable/custom_bg" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>