<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_main_top_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/activity_bg_color_blue"
    android:gravity="center"
    android:minHeight="50dip"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/lin_top_left_home"
        android:layout_width="120dip"
        android:layout_height="match_parent"
        android:layout_margin="10dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="25dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_menu_white_24dp"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_top_main_logo"
            android:layout_width="28dip"
            android:layout_height="28dip"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:layout_marginRight="3dp"
            android:src="@drawable/main_img" />

        <TextView
            android:id="@+id/tv_top_main_appname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/activity_bg_color_while"
            android:textSize="23sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_top_right_myinfo"
        android:layout_width="120dip"
        android:layout_height="match_parent"
        android:layout_margin="10dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_top_right_myinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/main_my"
            android:scaleType="fitXY"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>
