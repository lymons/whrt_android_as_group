<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color_while"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp" >

    <!-- 上面文字 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@color/activity_bg_color_gray_transparent"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_road_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/block_bg_color_black" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/activity_bg_color_while"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tv_road_stationNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/block_bg_color_black" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/activity_bg_color_while"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tv_road_huancheng_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/block_bg_color_black" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/activity_bg_color_while"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tv_road_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/block_bg_color_black" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 下面路线 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:paddingLeft="1dp" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="80dp"
                    android:paddingTop="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/qidian" />

                <TextView
                    android:id="@+id/tv_road_start_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="top"
                    android:textColor="@color/block_bg_color_black"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_huancheng1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingLeft="1dp" >

                <ImageView
                    android:id="@+id/img_lianxian1"
                    android:layout_width="15dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/huancheng" />

                <TextView
                    android:id="@+id/tv_road_huancheng1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/block_bg_color_black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_huancheng2"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingLeft="1dp" >

                <ImageView
                    android:id="@+id/img_lianxian2"
                    android:layout_width="15dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/huancheng" />

                <TextView
                    android:id="@+id/tv_road_huancheng2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/block_bg_color_black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="60dp"
                    android:paddingBottom="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/zhongdian" />

                <TextView
                    android:id="@+id/tv_road_stop_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:gravity="bottom"
                    android:textColor="@color/block_bg_color_black"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>